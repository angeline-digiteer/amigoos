<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <strong>Publish date:</strong>
    <%= post.publish_date %>
  </p>

  <p>
    <strong>Active:</strong>
    <%= post.active %>
  </p>

  <p>
    <strong>Permalink:</strong>
    <%= post.permalink %>
  </p>

</div>
